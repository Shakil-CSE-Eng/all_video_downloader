<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Youtube.YoutubeLink">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/browseLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/browseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:backgroundTint="?attr/button_color"
                android:textColor="?attr/text_color"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="5dp"/>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/linkId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_background"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1.5">
                        <ImageView
                            android:id="@+id/linkImageViewId"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_lock"
                            android:layout_marginStart="5dp"
                            android:layout_weight=".1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/linkMaterialId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginEnd="25dp"
                            android:textSize="16sp"
                            android:layout_weight="1.4"
                            android:textColor="@color/white">
                        </com.google.android.material.textview.MaterialTextView>
                    </LinearLayout>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <WebView
                        android:id="@+id/webViewLinkId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>
</FrameLayout>