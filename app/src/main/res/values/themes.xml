<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AllVideoDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        //Default Theme Color
        <item name="background_color">@color/md_green_500</item>
        <item name="background_color2">@color/white</item>
        <item name="background_color3">#F5F4F4</item>
        <item name="round_color">@color/white</item>
        <item name="round_color2">@color/white1</item>
        <item name="button_color">@color/md_green_500</item>
        <item name="button_color2">@color/md_green_700</item>
        <item name="button_color3">@color/orange</item>
        <item name="popup_background_color">@color/white</item>
        <item name="splash_color">@color/md_green_200</item>
        <item name="deep_color">@color/md_green_700</item>
        <item name="stroke_color">@color/colorGreen</item>
        <item name="text_color">@color/white</item>
        <item name="text_color2">@color/black</item>
        <item name="sub_text_color">#FFAAAAAA</item>
        <item name="image_color">@color/white</item>
        <item name="image_color2">@color/black</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorStatsGray</item>
        <item name="actionOverflowButtonStyle">@style/IconOverflow</item>

        <item name="android:itemTextAppearance">@style/ChangeTextColor</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="Theme.AllVideoDownloader" parent="Base.Theme.AllVideoDownloader" />
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attr/background_color2</item>
        <item name="android:textColor">?attr/text_color2</item>
        <item name="android:textColorPrimary">@color/colorStatsGray</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="IconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    //Theme Color
    <style name="OverlayThemeBlack" parent="Theme.AllVideoDownloader">
        <item name="background_color">@color/black</item>
        <item name="background_color2">@color/black2</item>
        <item name="background_color3">@color/black2</item>
        <item name="round_color">@color/black2</item>
        <item name="round_color2">@color/black3</item>
        <item name="button_color">@color/black3</item>
        <item name="button_color2">@color/black4</item>
        <item name="button_color3">@color/black3</item>
        <item name="popup_background_color">@color/black3</item>
        <item name="splash_color">@color/black2</item>
        <item name="deep_color">@color/black2</item>
        <item name="stroke_color">@color/colorStatsGray</item>
        <item name="text_color">@color/white</item>
        <item name="text_color2">@color/white</item>
        <item name="sub_text_color">#FFAAAAAA</item>
        <item name="image_color">@color/white</item>
        <item name="image_color2">@color/white</item>
    </style>


    <style name="OverlayThemeLime" parent="Theme.AllVideoDownloader">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_pink_A400</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="dialogAlertStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="ChangeTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/text_color2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?attr/popup_background_color</item>
        <item name="android:ems">10</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>